{
  "name": "cypress",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test:fast": "cypress run --browser chrome --headless --config video=false,screenshotOnRunFailure=true",
    "test:carrinho": "cypress run --spec cypress/e2e/carrinho.cy.js --browser chrome --headless --config video=false",
    "test:api": "cypress run --spec cypress/e2e/api.cy.js --browser chrome --headless",
    "test:all": "cypress run --browser chrome --headless",
    "test:ui": "cypress run --spec cypress/e2e/carrinho.cy.js --browser chrome --headless",
    "test:performance": "cypress run --spec cypress/e2e/performance.cy.js --browser chrome --headless --config defaultCommandTimeout=30000,pageLoadTimeout=60000",
    "test:mochawesome": "cypress run --browser chrome --headless --reporter mochawesome --reporter-options reportDir=cypress/reports/mochawesome,overwrite=false,html=true,json=true,charts=true",
    "test:mochawesome:merge": "npx mochawesome-merge cypress/reports/mochawesome/*.json > cypress/reports/combined.json",
    "test:mochawesome:generate": "npx marge cypress/reports/combined.json --reportDir cypress/reports --inline",
    "test:reporter": "npm run test:mochawesome && npm run test:mochawesome:merge && npm run test:mochawesome:generate",
    "clean:reports": "npx rimraf cypress/reports && npx mkdirp cypress/reports/mochawesome",
    "test:complete": "npm run clean:reports && npm run test:reporter",
    "test:api:debug": "cypress run --spec cypress/e2e/api.cy.js --browser chrome --headed",
    "test:api:fixed": "cypress run --spec cypress/e2e/api.cy.js --browser chrome --headless --config defaultCommandTimeout=20000,pageLoadTimeout=60000",
    "test": "npm run test:complete",
    "test:performance:light": "cypress run --spec cypress/e2e/performance.cy.js --browser chrome --headless --config defaultCommandTimeout=30000,pageLoadTimeout=60000,numTestsKeptInMemory=0",
    "test:accessibility": "cypress run --spec cypress/e2e/accessibility-ultimate.cy.js --browser chrome --headless",
    "test:checkout": "cypress run --spec cypress/e2e/checkout.cy.js --browser chrome --headless",
    "test:login": "cypress run --spec cypress/e2e/login.cy.js --browser chrome --headless"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "axe-core": "^4.11.0",
    "cypress": "^15.6.0",
    "cypress-audit": "^1.1.0",
    "cypress-axe": "^1.7.0",
    "cypress-mochawesome-reporter": "^4.0.2",
    "lighthouse": "^12.8.2",
    "mkdirp": "^3.0.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "rimraf": "^6.1.0"
  }
}
